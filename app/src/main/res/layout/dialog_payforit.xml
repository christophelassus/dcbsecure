<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/white_round" >

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="Roboto"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:text="@string/payforit_cta"
                android:textColor="#ff444444"
                android:textSize="20sp" />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="Roboto"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:text="for"
                android:textColor="#ff444444"
                android:textSize="20sp" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="Roboto"
                android:gravity="center"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="12dp"
                android:text="Â£4.50 per week"
                android:textColor="#ff444444"
                android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/white_round"
        android:orientation="vertical"
        android:padding="15dp" >

        <TextView
            android:id="@+id/billToMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="Roboto"
            android:gravity="center"
            android:text="Bill to mobile"
            android:textColor="#ff000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSubscribe"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="Roboto"
            android:layout_marginTop="12dp"
            android:background="@drawable/payforit_buttonstyle"
            android:text="Subscribe Now"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="#ffffffff"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/white_round"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" 
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txtCancel"
                    android:layout_width="wrap_content"
                    android:fontFamily="Roboto"
                    android:layout_height="25dp"
                    android:text="@android:string/cancel"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="Roboto"
                    android:text="@string/payforit_terms"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="16sp" />

            </LinearLayout>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="2"
                android:src="@drawable/payforit" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="Roboto"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:text="Help? 02032391589 or support@flirtymob.com" />
    </LinearLayout>

</LinearLayout>